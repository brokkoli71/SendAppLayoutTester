<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/content_shape"
    >

    <Button
        android:id="@+id/button_send"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="100dp"

        android:layout_marginBottom="64dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_send"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:text="@string/send"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <RelativeLayout
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:drawableStart="@drawable/ic_folder_open"
            android:paddingStart="30dip"
            android:paddingEnd="26dip"
            android:text="tap to select"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_view"
            android:contentDescription="@string/image_view_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>